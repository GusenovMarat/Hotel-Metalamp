mixin swiperSlider(links)
  .swiper
    .swiper-wrapper
      each link in links
        - const { src, alt } = link
        .swiper-slide
          img.swiper-slide__img(src=src, alt=alt)
    .swiper-pagination-img
    .swiper-button-prev
      .swiper__icon expand_more
    .swiper-button-next
      .swiper__icon expand_more