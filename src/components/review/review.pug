include ../like-button/like-button

mixin review({src, alt, name, date, text})
	.review
		.review__left
			a.review__user-avatar
				img.review__user-img(src="assets/img/users/"+ src alt=alt || "user")
			+likeButton({
				name: "like-button",
				count: "12"
			})
		.review__right
			.review__user-meta
				.review__user-name= name
				.review__user-viewdate #{date} назад
			.review__text= text
		