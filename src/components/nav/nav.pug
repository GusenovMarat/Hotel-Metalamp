include ../button/button

mixin nav({items, auth, account})
	nav.nav.js-nav
		ul.nav__list.js-nav__list
			li.nav__item-close
				button.nav__close.js-nav__close(type = "button")
					span.nav__close-icon close
			if items
				each item in items
					- const {	active, href, title, icon, sub } = item
						li.nav__item
							a.nav__link(class=active ? "nav__link_active": "" 
													href=href || "./index.html")=title
								if icon 
									span.nav__icon expand_more
							if sub
								ul.nav__sub
									each subitem in sub
										- const { subhref, subtitle } = subitem
										li.nav__sub-item
											a.nav__sub-link(href=subhref || "./index.html")=subtitle
			if auth 
				each button in auth 
					li.nav__item 
						+button(button)
		if account
			.nav__acc
				a.nav__link(href=account.href || "./index.html")=account.name	
		button.nav__burger.js-nav__burger
			span.nav__burger-icon menu
